<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zy.yaoproject.ui.LoginActivity">

    <com.zy.yaoproject.widget.wave.MultiWaveHeader
        android:id="@+id/waves"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:tag="
        70,25,1.4,1.4,-26
        100,5,1.4,1.2,15
        420,0,1.15,1,-10
        520,10,1.7,1.5,20
        220,0,1,1,-15
        "
        app:mwhAlphaColor="0.45"
        app:mwhCloseColor="#31AFFE"
        app:mwhStartColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/waves"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-65dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo_white" />


    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_login_account"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_login_account"
        android:hint="用户名"
        android:inputType="textPersonName"
        android:padding="3dp"
        android:textColor="#444444"
        android:textSize="14sp"
        tools:text="13828416860" />

    <View
        style="@style/AppTheme.Divison"
        android:layout_below="@+id/username"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/username"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_login_password"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_login_password"
        android:hint="密码"
        android:inputType="textPassword"
        android:padding="3dp"
        android:textColor="#444444"
        android:textSize="14sp" />

    <View
        style="@style/AppTheme.Divison"
        android:layout_below="@+id/password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp" />

    <ImageView
        android:id="@+id/delete"
        style="@style/AppTheme.Label.Assistant"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/username"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:src="@drawable/ic_login_delete"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/forget"
        style="@style/AppTheme.Label.Assistant"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:text="忘记密码？" />

    <TextView
        android:id="@+id/login"
        style="@style/AppTheme.Button.Primary"
        android:layout_width="match_parent"
        android:layout_below="@id/password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/primary_button"
        android:padding="10dp"
        android:text="登录"
        android:textSize="15sp"
        tools:enabled="true" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="359dp" />

</RelativeLayout>
