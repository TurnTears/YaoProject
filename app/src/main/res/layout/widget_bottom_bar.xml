<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerHeight"
        android:background="@color/dividerColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <!--首页-->
        <LinearLayout
            android:id="@+id/tab0"
            style="@style/TabLayout">

            <com.zy.yaoproject.widget.IconFont
                android:id="@+id/tab0_img"
                style="@style/TabIconFont"
                android:text="@string/icon_home" />

            <TextView
                android:id="@+id/tab0_text"
                style="@style/TabTextView"
                android:text="首页" />
        </LinearLayout>

        <!--分类-->
        <LinearLayout
            android:id="@+id/tab1"
            style="@style/TabLayout">

            <com.zy.yaoproject.widget.IconFont
                android:id="@+id/tab1_img"
                style="@style/TabIconFont"
                android:text="@string/icon_fenlei" />

            <TextView
                android:id="@+id/tab1_text"
                style="@style/TabTextView"
                android:text="分类" />
        </LinearLayout>

        <!--购物车-->
        <LinearLayout
            android:id="@+id/tab2"
            style="@style/TabLayout">

            <com.zy.yaoproject.widget.IconFont
                android:id="@+id/tab2_img"
                style="@style/TabIconFont"
                android:text="@string/icon_cart" />

            <TextView
                android:id="@+id/tab2_text"
                style="@style/TabTextView"
                android:text="购物车" />
        </LinearLayout>

        <!--我的-->
        <LinearLayout
            android:id="@+id/tab3"
            style="@style/TabLayout">

            <com.zy.yaoproject.widget.IconFont
                android:id="@+id/tab3_img"
                style="@style/TabIconFont"
                android:text="@string/icon_myself" />

            <TextView
                android:id="@+id/tab3_text"
                style="@style/TabTextView"
                android:text="我的" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>