<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">@color/themeColor</item>
        <item name="colorAccent">@color/themeColor</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="TabLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TabIconFont">
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tabUnSelectColor</item>
        <item name="android:textSize">21sp</item>
    </style>


    <style name="TabTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/tabUnSelectColor</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.Divison">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dividerHeight</item>
        <item name="android:background">@color/colorDivison</item>
        <item name="android:divider">@color/colorDivison</item>
        <item name="android:dividerHeight">@dimen/dividerHeight</item>
    </style>

    <style name="AppTheme.Divison.Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/dividerHeight</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/colorDivison</item>
    </style>

    <style name="AppTheme.Wrap">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.Wrap.Wrap">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Label" parent="AppTheme.Wrap.Wrap">
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextContent</item>
    </style>

    <style name="AppTheme.Label.Assistant">
        <item name="android:textColor">@color/colorTextAssistant</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme.Wrap.Wrap">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>

    <style name="AppTheme.Button.Primary">
        <item name="android:background">@drawable/primary_button</item>
    </style>

    <style name="LoadingDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:topDark">@color/white</item>
        <item name="android:centerDark">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
