<resources>

    <style name="AppThemeNoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">@color/themeColor</item>
        <item name="colorAccent">@color/themeColor</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TabLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TabIconFont">
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tabUnSelectColor</item>
        <item name="android:textSize">21sp</item>
    </style>


    <style name="TabTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/tabUnSelectColor</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
